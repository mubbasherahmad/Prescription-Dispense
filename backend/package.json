{
  "name": "prescription-app-backend",
  "version": "1.0.0",
  "description": "Backend for Prescription Management App",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "node server.js",
    "seed": "node scripts/seedData.js",
    "test": "jest --runInBand --verbose",
    "test:epic1": "jest test/epic1-prescription.test.js --runInBand --verbose",
    "test:epic2": "jest test/epic2-validation.test.js --runInBand --verbose",
    "test:epic3": "jest test/epic3-dispensation.test.js --runInBand --verbose",
    "test:epic4": "jest test/epic4-notification.test.js --runInBand --verbose",
    "test:epic5": "jest test/epic5-drug-inventory.test.js --runInBand --verbose",
    "test:sequential": "npm run test:epic1 && npm run test:epic2 && npm run test:epic3 && npm run test:epic4 && npm run test:epic5",
    "test:all": "jest test/epic*.test.js --runInBand --verbose"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^8.16.1",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.4"
  },
  "author": "Prescription App Team",
  "license": "ISC"
}
